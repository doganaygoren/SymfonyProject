<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> {% block title %} {% endblock %}|Admin Panel</title>

    <!-- Bootstrap -->
    <link href="/backend/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/backend/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="/backend/vendors/nprogress/nprogress.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="/backend/build/css/custom.min.css" rel="stylesheet"> 
  
  {% block css %}
  
  {% endblock %}
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="/admin" class="site_title"><i class="fa fa-paw"></i> <span>Symfony</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="{{ asset('uploads/images/' ~ app.user.image) }}" alt="..." class="img-circle profile_img" height="60">
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>{{ app.user.name }} {{ app.user.surname }}</h2>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li><a><i class="fa fa-home"></i> Home <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="{{ path('backend_index')}}">Go to Main Page</a></li>
                                        <li><a href="{{ path('frontend_index') }}">Go to Frontend Index Page</a></li>
                                    </ul>
                                </li>
                                <li><a><i class="fa fa-sitemap"></i> Categories <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="{{ path('backend_category') }}">Category List</a></li>
                                        <li><a href="{{ path('backend_category_add') }}">Category Add</a></li>
                                    </ul>
                                </li>
                                <li><a><i class="fa fa-cogs"></i> Settings <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="{{ path('backend_settings') }}">General Settings</a></li>
                                        <li><a href="{{ path('backend_about') }}">About Us Settings</a></li>
                                    </ul>
                                </li>
                                
                                <!--<li><a href=""><i class="fa fa-cogs"></i>Settings<span class="fa fa-chevron"></span></a>
                                </li>-->
                                <li><a><i class="fa fa-trophy"></i> Activity <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="{{ path('backend_activity') }}">Activity List</a></li>
                                        <li><a href="{{ path('backend_activity_add') }}">Add New Activity</a></li>
                                    </ul>
                                </li>
                                <li><a href="{{ path('backend_user') }}"><i class="fa fa-users"></i>Users<span class="fa fa-chevron"></span></a>
                                </li>
                                <li><a href="{{ path('backend_message') }}"><i class="fa fa-envelope"></i>Messages<span class="fa fa-chevron"></span></a>
                                </li>
                                <li><a href="{{ path('backend_comment') }}"><i class="fa fa-comment"></i>Comments<span class="fa fa-chevron"></span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->

                    <!-- /menu footer buttons -->
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="{{ asset('uploads/images/' ~ app.user.image) }}" alt="">{{ app.user.name }} {{app.user.surname}}
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li>
                                        <a href="{{ path('backend_settings') }}"><i class="fa fa-cogs pull-right"></i>
                                            <span>Settings</span>
                                        </a>
                                    </li>
                                    <li><a href="{{ path('app_logout') }}"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>

                            <li role="presentation" class="dropdown">
                                <a href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-envelope-o"></i>
                                    <span class="badge bg-green">6</span>
                                </a>
                                <ul id="menu1" class="dropdown-menu list-unstyled msg_list" role="menu">
                                    <li>
                                        <a>
                                            <span class="image"><img src="{{ asset('uploads/images/' ~ app.user.image) }}" alt="Profile Image" /></span>
                                            <span>
                                            <span>{{app.user.name}} {{app.user.surname}}</span>
                                            <span class="time">3 mins ago</span>
                                            </span>
                                            <span class="message">
                                              Film festivals used to be do-or-die moments for movie makers. They were where...
                                            </span>
                                        </a>
                                </ul>
                                </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>{% block header %}Plain Page{% endblock %}</h3>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">

                                <div class="x_content">

                                    {% block main_content %} {% endblock %}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- jQuery -->
    <script src="/backend/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/backend/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="/backend/vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="/backend/vendors/nprogress/nprogress.js"></script>
    <!-- validator -->
    <script src="/backend/vendors/validator/validator.js"></script>

    <!-- Custom Theme Scripts -->
    <script src="/backend/build/js/custom.min.js"></script>

    {% block js %} 
  
    {% endblock %}

    <!-- /validator -->
</body>

</html>