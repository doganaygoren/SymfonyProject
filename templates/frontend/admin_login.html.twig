<div role="main" class="main">

    <section class="page-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>Admin Login</h1>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row featured-boxes login">
                    <div class="col-sm-12">
                        <div class="featured-box featured-box-secundary default info-content">
                            <div class="box-content">
                                
                                <form action="{{ path('app_login') }}" method="post" role="form">
                                    {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %} {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                    </div>
                                    {% endif %}
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <label for="inputEmail">Email</label>
                                                <input type="email" name="email" id="inputEmail" class="form-control input-lg" required autofocus>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <a class="pull-right" href="#">(Lost Password?)</a>
                                                <label for="inputPassword">Password</label>
                                                <input type="password" name="password" id="inputPassword" class="form-control input-lg" required>

                                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="submit" value="Login" class="btn btn-primary pull-left push-bottom" data-loading-text="Loading...">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

