<body>
    <div class="body">
        <header id="header">
            <div class="container">
                <div class="logo">
                    <a href="index.html">
                        <img alt="Porto" width="111" height="54" data-sticky-width="82" data-sticky-height="40" src="/frontend/img/logo.png">
                    </a>
                </div>
                <div class="search">
                    <form id="searchForm" action="page-search-results.html" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control search" name="q" id="q" placeholder="Search..." required>
                            <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                                </span>
                        </div>
                    </form>
                </div>

                <button class="btn btn-responsive-nav btn-inverse" data-toggle="collapse" data-target=".nav-main-collapse">f
                    <i class="fa fa-bars"></i>
                </button>
            </div>

            <div class="navbar-collapse nav-main-collapse collapse">
                <div class="container">
                    <ul class="social-icons">
                        <li class="facebook"><a href="http://www.facebook.com/" target="_blank" title="Facebook">Facebook</a></li>
                        <li class="twitter"><a href="http://www.twitter.com/" target="_blank" title="Twitter">Twitter</a></li>
                        <li class="linkedin"><a href="http://www.linkedin.com/" target="_blank" title="Linkedin">Linkedin</a></li>
                    </ul>
                    <nav class="nav-main mega-menu">

                        <ul class="nav nav-pills nav-main" id="mainMenu">
                            <li>
                                <a href="{{ path('frontend_index') }}">Home</a>
                            </li>
                            <li>
                                <a href="{{ path('home_activity_list') }}">Activities</a>
                            </li>
                            <li>
                                <a href="{{path('home_about')}}">About Us</a>
                            </li>
                            <li>
                                <a href="{{path('home_contact')}}">Contact Us</a>
                            </li>
                            
                            {% if app.user %}

                            <li class="dropdown mega-menu-item mega-menu-signin signin logged" id="headerAccount"><a class="dropdown-toggle extra" href="#"><i class="fa fa-angle-down"></i></a>
                                <a class="dropdown-toggle disabled" href="{{ path('frontend_profile') }}">
                                    <i class="fa fa-user"></i> {{app.user.name}} {{app.user.surname}}
                                    <i class="fa fa-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <div class="mega-menu-content">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <div class="user-avatar">
                                                        <div>
                                                            <img src="{{ asset('uploads/images/' ~ app.user.image) }}" class="img-thumbnail" height="200" width="150">
                                                        </div>
                                                        <p><strong>{{ app.user.name }} {{ app.user.surname }}</strong></p>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <ul class="list-account-options">
                                                        {% if is_granted('ROLE_ADMIN') %}
                                                        <li>
                                                            <a href="{{ path('backend_index') }}">Admin Panel</a>
                                                        </li>
                                                        {% endif %}
                                                        <li>
                                                            <a href="{{ path('frontend_profile') }}">My Profile</a>
                                                        </li>
                                                        <li>
                                                            <a href="{{ path('app_logout') }}">Log Out</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>

                            {% else %}

                            <li class="dropdown mega-menu-item mega-menu-signin signin" id="headerAccount"><a class="dropdown-toggle extra"><i class="fa fa-angle-down"></i></a>
                                <a class="dropdown-toggle disabled" href="{{ path('app_login') }}">
                                    <i class="fa fa-user"></i> Sign In
                                    <i class="fa fa-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <div class="mega-menu-content">
                                            <div class="row">
                                                <div class="col-md-12">

                                                    <div class="signin-form">

                                                        <span class="mega-menu-sub-title">Sign In</span>

                                                        <form action="{{ path('app_login') }}" method="post" role="form">

                                                            <div class="row">
                                                                <div class="form-group">
                                                                    <div class="col-md-12">
                                                                        <label for="inputEmail">Email</label>
                                                                        <input type="email" name="email" id="inputEmail" class="form-control input-lg" required autofocus>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="form-group">
                                                                    <div class="col-md-12">
                                                                        <a class="pull-right" href="#">(Lost Password?)</a>
                                                                        <label for="inputPassword">Password</label>
                                                                        <input type="password" name="password" id="inputPassword" class="form-control input-lg" required>

                                                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <span class="remember-box checkbox">
                                                            <label for="rememberme">
                                                                <input type="checkbox" name="_remember_me" class="form-check-input"> Remember me
                                                            </label>
                                                        </span>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <input type="submit" value="Login" class="btn btn-primary pull-right push-bottom" data-loading-text="Loading...">
                                                                </div>
                                                            </div>
                                                        </form>

                                                        <a href="{{ path('app_login') }}">
                                                            <p class="sign-up-info">Don't have an account yet? Sign Up</p>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </header>

        <div role="main" class="main">

                <section class="page-top">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-10">
                                <ul class="breadcrumb">
                                    <li><a href="#">Home</a></li>
                                    <li class="active">Blog</li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h1>Medium Image</h1>
                            </div>
                        </div>
                    </div>
                </section>

                <div class="container">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="blog-posts">

                                {% for activity in activities %}
                                <article class="post post-medium">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="post-image">
                                                <div class="owl-carousel" data-plugin-options='{"items":1}'>
                                                    <div>
                                                        <div class="img-thumbnail">
                                                            <img class="img-responsive" height="500" width="1280" src="{{ asset('uploads/images/' ~ activity.image) }}" alt="">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">

                                            <div class="post-content">

                                                <h2><a href="{{ path('home_activity', {'id':activity.id}) }}"></a>{{ activity.title }}</h2>
                                                <p>{{ activity.description }}</p>

                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="post-meta">
                                                <span><i class="fa fa-calendar"></i> January 10, 2013 </span>
                                                <span><i class="fa fa-tag"></i> <a href="#">{{ activity.keyword }}</a> </span>
                                                <a href="{{ path('home_activity', {'id':activity.id}) }}" class="btn btn-xs btn-primary pull-right">Read more...</a>
                                            </div>
                                        </div>
                                    </div>

                                </article>
                            {% endfor %}
                                <ul class="pagination pagination-lg pull-right">
                                    <li><a href="#">«</a></li>
                                    <li class="active"><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">»</a></li>
                                </ul>

                            </div>
                        </div>

                        
                    </div>

                </div>

            </div>


